
<div class="card">
  <div class="card-header">
    <h4>Title: {{oneBook.title}}</h4>
  </div>
  <div class="card-body">
    <p>Description: {{oneBook.description}}</p>
    {{!-- <p>Author: {{oneBook.author.name}} de {{oneBook.author.country}} nacido en {{oneBook.author.yearBorn}}</p> --}}
    {{#each oneBook.author}}
      <p>Author: {{this.name}} de {{this.country}} nacido en {{this.yearBorn}}</p>
    {{/each}}
    
    <a href="/books/{{oneBook._id}}/edit">
      {{!-- GET --}}
      <button class="btn btn-outline-warning">Actualizar</button>
    </a>

    <form action="/books/{{oneBook._id}}/delete" method="POST">
      {{!-- POST --}}
      <button class="btn btn-outline-danger">Borrar</button>
    </form>
  </div>
</div>